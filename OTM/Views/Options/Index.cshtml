@model IEnumerable<OTM.Models.Options>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-danger" asp-action="Create"><i class="badge badge-light">+</i>Create New</a>
    <a class="btn btn-info" asp-controller="Questions" asp-action="Index" asp-route-id="@ViewBag.tid">Questions</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Option)
            </th>
            <th class="d-none">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correct)
            </th>
            <th class="d-none">
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Option)
                </td>
                <td class="d-none">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (item.Correct == true)
                    {
                        <p> Yes</p>
                    }
                    else
                    {
                        <p>No</p>
                    }

                </td>
                <td class="d-none">
                    @Html.DisplayFor(modelItem => item.Question.Id)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    @*<a class="btn btn-dark" asp-controller="Options" asp-action="Index" asp-route-id="@item.Id">Options</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
